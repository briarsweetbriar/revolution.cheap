Revolution.Project = DS.Model.extend(
  Revolution.TaggableMixin
  
  createdAt: DS.attr("date")
  description: DS.attr("string")
  slug: DS.attr("string")
  source: DS.attr("string")
  title: DS.attr("string")
  website: DS.attr("string")

  projectLogo: DS.belongsTo("projectLogo")
  slideshow: DS.belongsTo("slideshow")
  projectRoles: DS.hasMany "projectRole",
    async: true

  logoUrl: (->
    logoUrl = @get("projectLogo.file.file.url")
    if logoUrl? then logoUrl else "<%= asset_path('default-logo.png') %>"
  ).property("projectLogo.file.file.url")
)